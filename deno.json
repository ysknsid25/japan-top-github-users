{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "exec": "deno run --allow-read --allow-net --allow-env main.ts",
    "test": "RETRY_BASE_DELAY_MS=1000 deno test --allow-read --allow-net --allow-env"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "fmt": {
    "options": {
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "always"
    }
  },
  "lint": {
    "exclude": ["**/*_test.ts"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars"]
    }
  }
}
